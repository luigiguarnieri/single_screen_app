<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="#FFFFFF"
            android:orientation="vertical"
            tools:context="com.example.android.yogarts.MainActivity">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@null"
                android:src="@drawable/yogarts_mod"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_description"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#D50000" />

            <Button
                style="@style/Button"
                android:text="@string/chi_siamo" />

            <Button
                style="@style/Button"
                android:text="@string/dove_siamo"
                android:onClick="openMap" />

            <Button
                style="@style/Button"
                android:text="@string/eventi" />

            <Button
                style="@style/Button"
                android:text="@string/prenota_la_tua_lezione" />

        <RelativeLayout
            style="@style/contactRelativeLayout">

            <ImageView
                style="@style/Image"
                android:contentDescription="@null"
                android:id="@+id/ic_phone"
                android:src="@drawable/ic_phone" />

            <TextView
                style="@style/Text"
                android:text="@string/phone_numbers"
                android:layout_toRightOf="@id/ic_phone"
                android:layout_toEndOf="@id/ic_phone" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/contactRelativeLayout">

            <ImageView
                style="@style/Image"
                android:contentDescription="@null"
                android:id="@+id/ic_mail"
                android:src="@drawable/ic_mail" />

            <TextView
                style="@style/Text"
                android:text="@string/email"
                android:layout_toRightOf="@id/ic_mail"
                android:layout_toEndOf="@id/ic_mail" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/contactRelativeLayout">

            <ImageView
                style="@style/Image"
                android:contentDescription="@null"
                android:id="@+id/ic_facebook"
                android:src="@drawable/ic_facebook" />

            <TextView
                style="@style/Text"
                android:text="@string/fb_page"
                android:layout_toRightOf="@id/ic_facebook"
                android:layout_toEndOf="@id/ic_facebook" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/contactRelativeLayout">

            <ImageView
                style="@style/Image"
                android:contentDescription="@null"
                android:id="@+id/ic_site"
                android:src="@drawable/ic_site" />

            <TextView
                style="@style/Text"
                android:text="@string/website_address"
                android:layout_toRightOf="@id/ic_site"
                android:layout_toEndOf="@id/ic_site" />
        </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@null"
                android:src="@drawable/flower2"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_maxim"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#D50000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        </LinearLayout>

</ScrollView>